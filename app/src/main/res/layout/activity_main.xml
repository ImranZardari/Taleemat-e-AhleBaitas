<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"

                />

            <LinearLayout
                android:id="@+id/SliderDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewPager"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/SliderDots"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp">


                <ImageButton
                    android:background="@drawable/wazaif"
                    android:id="@+id/btnWazaif"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="5dp"
                    />

                <ImageButton
                    android:background="@drawable/aqwal"
                    android:id="@+id/btnAqwal"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="5dp"
                    />




            </LinearLayout>


            <LinearLayout
                android:id="@+id/bottom_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="2"
                android:layout_below="@id/btn_layout"
                >



                <ImageButton
                    android:background="@drawable/setting"
                    android:id="@+id/btnSetting"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    />

                <ImageButton
                    android:background="@drawable/upload_btn"
                    android:id="@+id/btnUpload"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="30dp"
                    />


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="2"
                android:layout_below="@id/bottom_linear"
                >




                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/main_banner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_above="@+id/main_banner1"
                    android:layout_marginBottom="5dp"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-2669593833570116/8097046598">
                </com.google.android.gms.ads.AdView>

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/main_banner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-2669593833570116/3433368115">
                </com.google.android.gms.ads.AdView>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>






</RelativeLayout>

